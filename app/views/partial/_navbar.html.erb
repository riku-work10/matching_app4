<nav class="navbar navbar-light">
  <%= link_to users_path, class: "nav-item nav-link", data: { turbolinks: :false } do %>
    <span class="<%= 'active' if current_page?(users_path) %>">
      <i class="bi bi-fire fa-lg inherit"></i>
    </span>
  <% end %>
  
  <%= link_to matching_index_path, class: "nav-item nav-link" do %>
    <span class="<%= 'active' if current_page?(matching_index_path) %>">
      <i class="bi bi-chat-dots fa-lg inherit"></i>
    </span>
  <% end %>

  <%= link_to user_path(@user), class: "nav-item nav-link" do %>
    <span class="<%= 'active' if current_page?(user_path(@user)) || current_page?(edit_user_registration_path) %>">
      <i class="bi bi-person fa-lg inherit"></i>
    </span>
  <% end %>
</nav>
